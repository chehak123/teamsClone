    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/error.css">
    <link rel="stylesheet" href="css/create.css">
      
    <!-- Title of Page -->
    <title>Microsoft Teams</title>
  </head>

  
  <body style="background-color: whitesmoke;">

    <nav class="navbar navbar-expand-md navbar-light fixed-top" style="background-color: #4e5d94 !important;">
        <div class="container-fluid">
          <a class="navbar-brand" href="/create" style="color: white;"> Microsoft Teams
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
    </nav>


    <div class="container" style="margin-top: 17vh; margin-right: auto; margin-left:auto;">
      <div class="row">
          <!-- <div class="col-lg-6 mb-4"> -->
          <div class="card" style="width: 30rem;">
              <div class="card-body">
                <h5 class="card-title text-center" style="margin-top: 10px;">Share with friends</h5>
                <br>
                <img class="img-responsive center-block d-block mx-auto" style="width: 120px; height: auto;" src="img/iconf.png">
                <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
                <br>
                <form action="/share" method="post">
                  <div class="form-group">
                    <input type="text" class="form-control" name="friendmail" placeholder="Enter your friends mail id" style="border-color: transparent; background-color: whitesmoke;" required>
                  </div>
                  <br>
                  <div class="text-center">
                      <button type="submit" class="btn btn-primary create-team" style="align-content: center;">Send mail</button>
                  </div>
              </form>
              </div>
            </div>      
      </div>
  </div>


    <!-- Bootstrap JS -->
